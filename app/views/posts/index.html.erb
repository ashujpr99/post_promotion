<title>Listing Posts</title>
<link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css"/>
<script src="//code.jquery.com/jquery-1.9.1.js"></script>
<script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>

<script src="/assets/application.js"></script>

<div id="dialog-form" title="Post Popup">

<form>
<fieldset>
<label id="id"></label>
<label id="pin">PIN : </label>
<input type="text" name="pin" id="pin" class="text ui-widget-content ui-corner-all" />
</fieldset>
</form>
</div>
<div id="posts-contain" class="ui-widget">
<h1>Listing Posts:</h1>
<table id="posts" class="ui-widget ui-widget-content">
<thead>
  
  
<tr class="ui-widget-header ">
<th>Select</th>
<th>Post</th>
<th>Description</th>
</tr>
</thead>
<tbody>
  <% @posts.each do |post| %>
<tr>
<td><%=radio_button_tag(:post, "#{post.id}")%></td>
<td><%=post.post%></td>
<td><%=post.description%></td>
</tr>
<% end %>
</tbody>
</table>
</div>
<button id="promote-post">Promote</button>
